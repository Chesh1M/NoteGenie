<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#414C6B"
    android:backgroundTint="#414C6B"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DC1212"
                android:backgroundTint="#DD1A1A">

                <TextView
                    android:id="@+id/summaryFileName"
                    android:layout_width="264dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Calculus 1 Lecture 2"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/modifiedDate"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/modifiedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="13dp"
                    android:fontFamily="@font/roboto"
                    android:text="Date: 17-03-2023"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <CheckBox
                    android:id="@+id/summaryIsSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="76dp"
                    android:layout_marginBottom="12dp"
                    android:translationX="65dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

